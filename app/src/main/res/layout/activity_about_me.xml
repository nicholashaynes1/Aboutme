<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".AboutMeActivity"
    android:id="@+id/homeScreen">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skating"
        android:id="@+id/skatingButton"
        android:layout_marginTop="99dp"
        android:layout_below="@+id/homeButton"
        android:layout_alignRight="@+id/homeButton"
        android:layout_alignEnd="@+id/homeButton"
        android:visibility="gone" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Working"
        android:id="@+id/workButton"
        android:layout_alignBottom="@+id/skatingButton"
        android:layout_toRightOf="@+id/skatingButton"
        android:layout_toEndOf="@+id/skatingButton"
        android:visibility="gone" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Computers"
        android:id="@+id/computerButton"
        android:layout_alignBottom="@+id/workButton"
        android:layout_toRightOf="@+id/workButton"
        android:layout_toEndOf="@+id/workButton"
        android:visibility="gone" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Music"
        android:id="@+id/musicButton"
        android:layout_below="@+id/skatingButton"
        android:layout_toLeftOf="@+id/workButton"
        android:layout_toStartOf="@+id/workButton"
        android:visibility="gone" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The Gym"
        android:id="@+id/gymButton"
        android:layout_below="@+id/workButton"
        android:layout_toRightOf="@+id/musicButton"
        android:layout_toStartOf="@+id/computerButton"
        android:layout_toLeftOf="@+id/computerButton"
        android:visibility="gone" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back to home"
        android:id="@+id/homeButton"
        android:visibility="visible"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gymPicture"
        android:visibility="visible"
        android:longClickable="true"
        android:src="@drawable/thegym"
        android:layout_marginBottom="262dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageTextbox"
        android:layout_marginBottom="144dp"
        android:text="hhhhhhhhhhh"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/homeButton"
        android:layout_toStartOf="@+id/homeButton" />
</RelativeLayout>
